<!--            <bean class="com.bug.henong.interceptor.SqlInjectInterceptor"></bean>-->
<!--        </mvc:interceptor>-->
<!--    </mvc:interceptors>-->

    <!-- CSRF Interceptor -->
    <mvc:interceptors>
        <mvc:interceptor>
            <!-- 对登录操作进行拦截 -->
            <mvc:mapping path="/login" />
            <bean class="com.bug.henong.interceptor.LoginInterceptor" />
        </mvc:interceptor>
    </mvc:interceptors>

